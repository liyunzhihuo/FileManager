<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff">

    <com.xiao.filemanager.bga_photopicker.widget.BGAImageView
        android:id="@+id/select_item_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="#303d42"
        android:scaleType="centerCrop"
        app:bga_iv_square="true"
        tools:src="@mipmap/bga_pp_ic_holder_dark" />


    <TextView
        android:id="@+id/select_item_index"
        android:layout_width="11dp"
        android:layout_height="11dp"
        android:layout_alignTop="@+id/select_item_img"
        android:layout_alignRight="@+id/select_item_img"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/img_select" />
</RelativeLayout>